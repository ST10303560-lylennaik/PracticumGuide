<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp">

<Button
    android:id="@+id/btnShowAll"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Display Packing List"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="100dp" />

<Button
    android:id="@+id/btnShowFiltered"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Items with Quantity â‰¥ 2"
    app:layout_constraintTop_toBottomOf="@id/btnShowAll"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="24dp" />

<Button
    android:id="@+id/btnReturn"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Return to Main Screen"
    app:layout_constraintTop_toBottomOf="@id/btnShowFiltered"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
